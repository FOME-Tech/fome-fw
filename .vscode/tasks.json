	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Firmware",
			"type": "shell",
			"command": "make clean",
			"windows": {
				"command": "wsl bash -lc 'make clean'"
			},
			"options": {
				"cwd": "${workspaceRoot}/firmware"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Firmware (Proteus F4)",
